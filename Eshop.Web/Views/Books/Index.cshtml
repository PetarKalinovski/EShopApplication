@model IEnumerable<Eshop.Domain.Domain.Book>

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>Picture</th>
            <th>Title</th>
            <th>Authors</th>
            <th>Publisher</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(book.PictureUrl))
                    {
                        <img src="@book.PictureUrl" alt="Book Picture" style="max-height: 100px; max-width: 100px;" />
                    }
                </td>
                <td>@book.Title</td>
                <td>@string.Join(", ", book.Authors.Select(a => a.Name))</td>
                <td>@book.Publisher?.Name</td>
                <td>$@book.Price</td>
                <td>
                    <form method="post" asp-action="AddToOrder" asp-controller="Books">
                        <input type="hidden" name="bookId" value="@book.Id" />
                        <input type="number" name="quantity" value="1" min="1" class="form-control mb-2" style="width: 70px;" />
                        <button type="submit" class="btn btn-success">Add to Order</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Add Book</a>